generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id() @default(autoincrement())
  name     String
  username String
  password String
  role     Role   @default(USER)
  status   String @default("used")
}

enum Role {
  USER
  ADMIN
}

model SparePart {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  categoryId  Int
  cost        Int
  Category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id          Int         @id @default(autoincrement())
  name        String
  sparePartId Int
  SparePart   SparePart[]
}

model Customer {
  id       Int     @id @default(autoincrement())
  name     String
  code     String
  address  String
  email    String
  contact1 String
  contact2 String?
  status   String  @default("used")
}
